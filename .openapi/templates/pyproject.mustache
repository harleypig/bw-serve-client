[tool.poetry]
name = "{{{packageName}}}"
version = "{{{packageVersion}}}"
description = "Bitwarden CLI Vault Management API"
authors = ["{{infoName}}{{^infoName}}OpenAPI Generator Community{{/infoName}} <{{infoEmail}}{{^infoEmail}}team@openapitools.org{{/infoEmail}}>"]
license = "{{{licenseInfo}}}{{^licenseInfo}}NoLicense{{/licenseInfo}}"
readme = "README.md"
repository = "https://github.com/{{{gitUserId}}}/{{{gitRepoId}}}"
keywords = ["OpenAPI", "OpenAPI-Generator", "{{{appName}}}"]
include = ["{{packageName}}/py.typed"]

[tool.poetry.dependencies]
aenum = ">=3.1.11"
pydantic = "^1.10.5, <2"
python = "^3.9"
python-dateutil = ">= 2.5.3"
urllib3 = ">= 1.25.3, < 2.1.0"
{{#asyncio}}
aiohttp = ">= 3.8.4"
{{/asyncio}}
{{#hasHttpSignatureMethods}}
pem = ">= 19.3.0"
pycryptodome = ">= 3.9.0"
{{/hasHttpSignatureMethods}}

[tool.poetry.group.dev.dependencies]
flake8 = ">=4.0.0"
pytest = ">=7.2.1"
pytest-cov = ">=2.8.1"
pytest-randomly = ">=3.12.0"
tox = ">=3.9.0"
yapf = "^0.40.2"
pytest-mock = "^3.12.0"

[tool.poetry.group.docs.dependencies]
mkdocs = "^1.5.3"
sphinx = "^7.2.6"
sphinx-autodoc-typehints = "^2.0.0"
sphinxcontrib-email = "^0.3.6"
sphinxcontrib-openapi = "^0.8.4"
sphinx-lint = "^0.9.1"

[build-system]
requires = ["setuptools"]
build-backend = "setuptools.build_meta"

[tool.pylint.'MESSAGES CONTROL']
extension-pkg-whitelist = "pydantic"

[tool.poetry_bumpversion.file."bw_serve_client/__init__.py"]

[tool.poetry_bumpversion.replacements]
files = [".openapi/generator-pydantic.yml"]
